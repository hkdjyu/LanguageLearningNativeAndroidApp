<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.CSCI3310Project" parent="Theme.Material3.DayNight.NoActionBar">

        <!--    Primary Color    -->
        <item name="colorPrimary">@color/lavender</item>
        <item name="colorPrimaryVariant">@color/lavender</item>
        <item name="colorOnPrimary">@color/white</item>

        <!--    Secondary Color    -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!--    Status Bar Color    -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.CSCI3310Project" parent="Base.Theme.CSCI3310Project" />

    <style name="ScreenBackground">
        <item name="android:background">@color/scotch_mist</item>
    </style>
    <style name="SecondaryBackground">
        <item name="android:background">@color/pale_spring_bud</item>
    </style>
    <style name="TertiaryBackground">
        <item name="android:background">@color/champagne</item>
    </style>
    <style name="SecondaryBackgroundOpposite">
        <item name="android:background">@color/muddy_green</item>
    </style>
    <style name="TertiaryBackgroundOpposite">
        <item name="android:background">@color/sand_brown</item>
    </style>

    <style name="PrimaryText">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="SecondaryText">
        <item name="android:textColor">@color/black_olive</item>
    </style>
    <style name="TertiaryText">
        <item name="android:textColor">@color/gray</item>
    </style>
    <style name="PrimaryTextOpposite">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="SecondaryTextOpposite">
        <item name="android:textColor">@color/pale_spring_bud</item>
    </style>
    <style name="TertiaryTextOpposite">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="TitleText1">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/rounded_corner_title_text1</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SearchEditText">
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/search_edit_text</item>
    </style>

    <style name="Button1">
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/rounded_corner_button1</item>
    </style>
    <style name="Button2">
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/rounded_corner_button2</item>
    </style>
    <style name="Button3">
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/rounded_corner_button3</item>
    </style>

    <style name="OneLineEditText">
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/rounded_corner_edit_text1</item>
    </style>
    <style name="LongEditText">
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/rounded_corner_edit_text2</item>
    </style>

    <style name="FlashcardSetPreview">
        <item name="android:background">@drawable/rounded_corner_edit_text1</item>
    </style>
    <style name="FlashcardFront">
        <item name="android:background">@color/green_mist</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="FlashcardBack">
        <item name="android:background">@color/whiskey</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>