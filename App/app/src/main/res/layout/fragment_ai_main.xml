<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AiMainFragment"
    style="@style/ScreenBackground">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:id="@+id/writeMainLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100">

        <ScrollView
            android:id="@+id/aiScrollView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="90"
            style="@style/OneLineEditText">

            <LinearLayout
                android:id="@+id/aiContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:weightSum="100">

            <Spinner
                android:id="@+id/ai_spinner"
                style="@style/AiSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_weight="10"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="90"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:text="@string/clear_chat"
                android:background="@color/transparent"
                style="@style/PrimaryText"
                android:id="@+id/ai_clear_button" />

        </LinearLayout>



        <EditText
            android:id="@+id/ai_input_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="100dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:hint="@string/ai_input_hint"
            android:inputType="textMultiLine"
            android:minLines="3"
            android:maxLines="3"
            android:scrollbars="vertical"
            android:gravity="top"
            style="@style/LongEditText"/>

        <LinearLayout
            android:id="@+id/aiButtonLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingStart="10dp"
            android:paddingEnd="10dp">
        <Button
            android:id="@+id/ai_ask_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:text="@string/ask"
            style="@style/Button1"/>

        </LinearLayout>



    </LinearLayout>

</RelativeLayout>