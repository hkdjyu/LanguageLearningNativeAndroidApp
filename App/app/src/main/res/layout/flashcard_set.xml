<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="horizontal"
        android:weightSum="4"
        android:id="@+id/flashcard_set_item"
        style="@style/FlashcardSetPreview">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="3"
            android:weightSum="2">
            <TextView
                android:id = "@+id/flashcard_set_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Set Title"
                android:textSize="18sp"
                android:textStyle="bold"
                style="@style/PrimaryText"/>

            <TextView
                android:id = "@+id/flashcard_set_datetime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2024-05-07 Tue 12:00:00"
                android:textSize="10dp"
                style="@style/TertiaryText"/>

        </LinearLayout>

        <TextView
            android:id = "@+id/flashcard_set_count"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="7"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold"
            style="@style/PrimaryText"/>



    </LinearLayout>

</LinearLayout>